# --- Django ---
DEBUG=true
SECRET_KEY=change-me-in-prod
ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=Asia/Kolkata

# --- Database (SQLite for personal project) ---
# For SQLite, your settings.py can default to BASE_DIR / "db.sqlite3"
# DATABASE_URL is optional if you stick to the default
DATABASE_URL=sqlite:///db.sqlite3

# --- CORS (relaxed for local dev) ---
CORS_ALLOW_ALL_ORIGINS=true

# --- Media (local storage) ---
MEDIA_ROOT=./media
MEDIA_URL=/media/

# --- LLM (optional; set USE_LLM=true to enable extraction via model) ---
USE_LLM=false
OPENAI_API_KEY=

# --- Email/SMS stubs ---
EMAIL_BACKEND=console         # console or smtp; console prints emails to terminal
DEFAULT_FROM_EMAIL=Dev <dev@localhost>
SMS_PROVIDER=console          # console logs SMS body

# --- App behavior (optional caps) ---
MAX_UPLOAD_MB=10
